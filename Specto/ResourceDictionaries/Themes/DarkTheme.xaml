        <ResourceDictionary Source="../DefaultOther.xaml"/>
        <ResourceDictionary Source="../DefaultComboBox.xaml"/>
        <ResourceDictionary Source="../DarkThemeIcons.xaml"/>
    </ResourceDictionary.MergedDictionaries>
        
    <Color x:Key="DisabledThumbColor">#FFC5CBF9</Color>
    <Color x:Key="ThumbLightColor">#FF4C4C4C</Color>
    <Color x:Key="ThumbMediumColor">#FF3B3B3B</Color>
    <Color x:Key="ThumbMouseoverColor">#FF3B3B3B</Color>
    <Color x:Key="ThumbPressedColor">#FF2B2B2B</Color>
    <Color x:Key="ThumbBorderLightColor">#00000000</Color>
    <Color x:Key="ThumbBorderDarkColor">#00000000</Color>
    <Color x:Key="SliderTrackBorderLightColor">#00000000</Color>
    <Color x:Key="SliderTrackBorderDarkColor">#00000000</Color>
    <Color x:Key="SliderTrackLightColor">#FF131313</Color>
    <Color x:Key="SliderTrackDarkColor">#FF131313</Color>
    <Color x:Key="TickBarFillColor">#FF444444</Color>

    <SolidColorBrush x:Key="CheckBoxColor">#FF4B4B4B</SolidColorBrush>
    <SolidColorBrush x:Key="BackgroundColor">#FF0A0A0A</SolidColorBrush>
    <SolidColorBrush x:Key="TextColor">#FFCCCCCC</SolidColorBrush>

    <SolidColorBrush x:Key="FramesColor">#FF3A3A3A</SolidColorBrush>
