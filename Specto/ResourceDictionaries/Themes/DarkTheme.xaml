                    xmlns:local="clr-namespace:Specto"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../DefaultSlider.xaml"/>
