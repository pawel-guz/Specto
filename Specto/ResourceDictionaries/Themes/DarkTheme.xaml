    <SolidColorBrush x:Key="TextColorNotAttracting">#FF5C5C5C</SolidColorBrush>
    <SolidColorBrush x:Key="OppositeTextColor">#FF444444</SolidColorBrush>

    <sys:Double x:Key="IconOpacityNormal">0.45</sys:Double>
    <sys:Double x:Key="IconOpacityMouseOver">0.3</sys:Double>
    <sys:Double x:Key="IconOpacityInActive">0.15</sys:Double>
